<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/m3"
                android:padding="10dp"
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/personNameTv"
                android:text="sagar"
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="5dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/personNameTv"
                android:id="@+id/personEmailTv"
                android:text="sagarmia48@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:text="01948172608"
                android:layout_below="@id/personEmailTv"
                android:layout_toRightOf="@id/imageView"
                android:id="@+id/personPhoneNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>